  ⟨fun h ↦ ⟨h.left, fun h₁ ↦ h.right (by rw [h₁])⟩, fun h ↦ ⟨h.left, (not_le_of_lt (lt_of_le_of_ne h.left h.right))⟩⟩

theorem aux {x y : ℝ} (h : x ^ 2 + y ^ 2 = 0) : x = 0 :=
  have h' : x ^ 2 = 0 := by
    apply eq_of_le_of_le
    calc
      x ^ 2 ≤ x ^ 2 + y ^ 2 := by
        nth_rewrite 1 [← add_zero (x ^ 2)]
        apply add_le_add_left
        exact pow_two_nonneg y
      _ = 0 := by assumption
    exact pow_two_nonneg x
  pow_eq_zero h'

example (x y : ℝ) : x ^ 2 + y ^ 2 = 0 ↔ x = 0 ∧ y = 0 :=
  ⟨fun h ↦ ⟨aux h, by rw [aux h, zero_pow (by linarith), zero_add] at h; exact pow_eq_zero h⟩,
  fun h ↦ by rw [h.left, h.right]; linarith⟩

