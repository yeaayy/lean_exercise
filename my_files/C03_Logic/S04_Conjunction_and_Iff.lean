example : a < b ↔ a ≤ b ∧ a ≠ b := by
  rw [lt_iff_le_not_le]
  exact ⟨fun h ↦ ⟨h.left, ne_of_lt (lt_of_le_not_le h.left h.right)⟩,
    fun h ↦ ⟨h.left, fun h' ↦ h.right (le_antisymm h.left h')⟩⟩

end

