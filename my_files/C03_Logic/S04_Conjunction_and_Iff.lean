variable {α : Type*} [Preorder α]
variable (a b c : α)

example : ¬a < a := by
  rw [lt_iff_le_not_le]
  exact fun ⟨l, r⟩ ↦ r l

example : a < b → b < c → a < c := by
  simp only [lt_iff_le_not_le]
  exact fun ⟨h1, h2⟩ ↦ fun ⟨h3, h4⟩ ↦ ⟨le_trans h1 h3, fun h5 ↦ h4 (le_trans h5 h1)⟩

